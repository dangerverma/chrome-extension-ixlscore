{
  "manifest_version": 3,
  "name": "IXL Score Extension",
  "version": "1.0",
  "description": "A Chrome extension for tracking IXL Analytics Progress and Improvement scores.",
  "minimum_chrome_version": "88",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://au.ixl.com/analytics/progress-and-improvement/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 