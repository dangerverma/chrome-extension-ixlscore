{
  "manifest_version": 3,
  "name": "IXL Score Extension",
  "version": "1.0.0",
  "description": "A Chrome extension for IXL Score tracking",
  "minimum_chrome_version": "88",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.ixl.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*.ixl.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["https://*.ixl.com/*"]
  }]
} 